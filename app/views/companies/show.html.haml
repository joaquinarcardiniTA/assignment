.page-header
  = link_to companies_path, class: 'btn btn-default company-back-btn' do
    %span.glyphicon.glyphicon-list-alt
    Back
  - if can? :update, Company
    = link_to edit_company_path(@company), class: 'btn btn-primary' do
      %span.glyphicon.glyphicon-pencil
      Edit
  %h1 Show company
%dl.dl-horizontal
  %dt Name:
  %dd
    = @company.name
  %dt Country:
  %dd
    = @company.country
